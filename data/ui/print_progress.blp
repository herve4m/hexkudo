using Gtk 4.0;
using Adw 1;

template $HexkudoPrintProgress: Adw.Dialog {
  title: _("Preparing Puzzles for Printing");
  content-width: 460;

  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {}

    content: Adw.Clamp {
      maximum-size: 300;
      margin-top: 12;
      margin-bottom: 24;

      ProgressBar progress {}
    };
  }
}
