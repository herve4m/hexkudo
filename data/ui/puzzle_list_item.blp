using Gtk 4.0;
using Adw 1;

template $HexkudoPuzzleListItem: Adw.ActionRow {
  [prefix]
  CheckButton check_button {
    can-focus: false;
    can-target: false;
  }

  [suffix]
  Picture image {
    can-focus: false;
    can-target: false;
  }

  use-underline: false;
  activatable-widget: check_button;
}
