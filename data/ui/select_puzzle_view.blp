using Gtk 4.0;
using Adw 1;

template $HexkudoSelectPuzzleView: Adw.Bin {
  Adw.ToolbarView {
    top-bar-style: raised;

    [top]
    Adw.HeaderBar headerbar {
      centering-policy: strict;

      title-widget: Adw.WindowTitle windowtitle {
        title: _("Hexkudo");
        subtitle: _("Select Puzzle");
      };

      [start]
      Button back_button {
        visible: true;
        halign: center;
        valign: center;
        tooltip-text: _("Back");
        use-underline: true;
        action-name: "app.back-start";
        icon-name: "go-previous-symbolic";
      }

      [end]
      $HexkudoMenuButton menu_button {}
    }

    [bottom]
    ActionBar {
      [center]
      Button {
        margin-top: 12;
        label: _("_Start Game");
        use-underline: true;
        clicked => $start_game_cb() swapped;

        styles [
          "pill",
          "suggested-action",
        ]
      }
    }

    content: Adw.StatusPage {
      title: _("Select Puzzle");
      valign: start;

      child: Adw.Clamp {
        maximum-size: 400;

        Adw.PreferencesGroup preference_group {}
      };
    };
  }
}
